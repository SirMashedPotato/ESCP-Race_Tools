  <!-- Abhorrent -->

  <PreceptDef>
    <defName>ESCP_BeastfolkLeather_Abhorrent</defName>
    <issue>ESCP_BeastfolkLeather</issue>
    <label>abhorrent</label>
    <description>Wearing beastfolk leather is a deeply abhorrent and disgusting act.</description>
    <impact>Low</impact>
    <displayOrderInIssue>50</displayOrderInIssue>
    <displayOrderInImpact>100</displayOrderInImpact>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <thought>ESCP_BeastfolkLeatherApparel_Abhorrent</thought>
        <description>Beastfolk leather apparel</description>
        <tooltipShowMoodRange>true</tooltipShowMoodRange>
      </li>
    </comps>
  </PreceptDef>

  <ThoughtDef>
    <defName>ESCP_BeastfolkLeatherApparel_Abhorrent</defName>
    <workerClass>ESCP_RaceTools.ThoughtWorker_Precept_BeastfolkLeatherApparel</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>beastfolk leather {0}</label>
        <description>Wearing beastfolk leather is disturbing. Who could do this?</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
      <li>
        <label>beastfolk leather {0} (+1)</label>
        <description>I'm dressed like an insane person.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>beastfolk leather {0} (+2)</label>
        <description>I think there may be a face on my clothes. Oh, no... my clothes *are* a face.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>beastfolk leather {0} etc</label>
        <description>I look like a freak from a horror show, and I feel like I'm in a horror show.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
      <li>Cannibal</li>
    </nullifyingTraits>
  </ThoughtDef>


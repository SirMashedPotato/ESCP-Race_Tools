<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[ESCP_GenericBackstoryChildhood_Base]========== -->
	<!-- 
		Should only be used by races with standardised meditation types
		All give the artistic meditation type, unless specified
	-->
	<AlienRace.AlienBackstoryDef Name="ESCP_GenericBackstoryChildhood_Base" Abstract="True">
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ESCP_GenericBackstory_ChildhoodMedieval</li>
		</spawnCategories>
	</AlienRace.AlienBackstoryDef>
	
	<!-- ==========[ESCP_GenericBackstoryChildhood_TribalBase]========== -->
